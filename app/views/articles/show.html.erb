<%= render 'shared/flashes' %>
<div class='show'>
  <section class='post'>
    <header class='post-header'>
      <h2 class='post-title'><%= @article.title %></h2>
      <p class='post-meta'>
        Authored by <%= @article.user.username %> @ <%= @article.user.email %>
      </p>
      <p class="post-meta">
        Created
        <%= time_ago_in_words(@article.created_at) %>
      </p>
    </header>
    <div class='post-description'>
      <p>
        <%= @article.description %>
      </p>
    </div>
    <div class='post-categories'>
      <%= render(partial: 'categories/category', collection: @article.categories) || 'No categories' %>
      </div>
    <div class='actions'>
      <% if policy(@article).update? %>
        <%= link_to 'Edit', edit_article_path(@article), class: 'pure-button pure-button-primary' %>
      <% end %>

      <% if policy(@article).destroy? %>
        <%= link_to 'Delete', article_path(@article), class: 'pure-button button-error', method: :delete %>
      <% end %>
    </div>
  </section>
</div>
