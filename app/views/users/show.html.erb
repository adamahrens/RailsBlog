<%= render 'shared/flashes' %>
<div class='show'>
  <section class='post'>
    <header class='post-header user-header'>
      <h2 class='post-title'><%= @user.username %></h2>
      <h5 class='post-meta'></h5>
      <p class='post-meta'>
        Reach them at
        <%= @user.email %>
      </p>
      <div class='actions'>
        <% if policy(@user).update? %>
          <%= link_to 'Edit', edit_user_path(@user), class: 'pure-button pure-button-primary' %>
        <% end %>
      </div>
    </header>
    <div class='post-description user-description'>
      <h3>My Articles</h3>
      <%= render(partial: 'articles/article', collection: @user.articles) || 'None' %>
    </div>
  </section>
</div>
