
<%= form_with model: user, local: true, class: 'pure-form pure-form-aligned' do |form| %>
<fieldset>
  <%= render 'shared/errors', model: user %>
  <div class="pure-control-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'pure-input-2-3' %>
  </div>
  <div class="pure-control-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'pure-input-2-3' %>
  </div>
  <div class="pure-control-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'pure-input-2-3' %>
  </div>
  <div class="pure-control-group">
    <%= form.submit submit_text, class: 'pure-button pure-button-primary' %>
  </div>
</fieldset>
<% end %>
